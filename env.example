# ScribbleTune02 Environment Configuration
# Copy this file to .env and modify the values as needed

# ====== MUSICAL CONFIGURATION ======
# Tempo and timing
BPM=110
BARS=4

# Musical key and progression
SCALE_KEY=C minor
PROGRESSION=i VI III VII

# Bass roots for the progression
BASS_ROOTS=C2,Ab1,Eb2,Bb1

# ====== OUTPUT CONFIGURATION ======
# Output directory for generated MIDI files
OUTPUT_DIR=duo/full

# ====== DRUM CONFIGURATION ======
# MIDI note mappings for drum kit
DRUM_KICK=C1
DRUM_SNARE=D1
DRUM_CLOSED_HAT="F#1"
DRUM_OPEN_HAT="A#1"
DRUM_CRASH="C#2"
DRUM_TOM_LOW=F1
DRUM_TOM_MID=A1
DRUM_TOM_HIGH=C2

# ====== AMPLITUDE CONFIGURATION ======
# Default amplitude levels
AMP_KICK=115
AMP_SNARE=118
AMP_CLOSED_HAT=100
AMP_OPEN_HAT=110
AMP_CRASH=120
AMP_TOM_FILL=115
AMP_BASS=115
AMP_CHORDS_PADS=115
AMP_CHORDS_PLUCKS=110
AMP_ARP=110
AMP_LEAD=115
AMP_FX_CRASH=120

# ====== ACCENT CONFIGURATION ======
# Accent low levels
ACCENT_KICK=90
ACCENT_SNARE=95
ACCENT_CLOSED_HAT=80
ACCENT_OPEN_HAT=90
ACCENT_CRASH=100
ACCENT_TOM_FILL=95
ACCENT_BASS=90
ACCENT_CHORDS_PADS=95
ACCENT_CHORDS_PLUCKS=85
ACCENT_ARP=85
ACCENT_LEAD=90
ACCENT_FX_CRASH=100

# ====== ARPEGGIO CONFIGURATION ======
# Arpeggio settings
ARP_COUNT=4
ARP_ORDER=0123
ARP_NOTES=C4,Eb4,G4,Bb4,C5,Bb4,G4,Eb4

# ====== LEAD MELODY CONFIGURATION ======
# Lead melody notes
LEAD_NOTES=C5,Eb5,G5,Bb5,G5,Eb5,C5,Bb4,C5,Eb5,G5,Eb5,C5,Bb4

# ====== DEVELOPMENT CONFIGURATION ======
# Development settings
NODE_ENV=development
LOG_LEVEL=info
